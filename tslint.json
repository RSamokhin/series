{
    "extends": [
        "tslint:recommended",
        "tslint-react"
    ],
    "rules": {
        "trailing-comma": [
            true,
            {
                "multiline": "never",
                "singleline": "never"
            }
        ],
        "quotemark": [true, "single", "avoid-escape", "avoid-template"]
    }

}